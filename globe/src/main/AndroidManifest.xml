<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:dist="http://schemas.android.com/apk/distribution"
        package="com.mxmariner.tides.globe">

    <dist:module
            dist:instant="false"
            dist:title="@string/title_globe">
        <dist:delivery>
            <dist:install-time />
        </dist:delivery>
        <dist:fusing dist:include="true" />
    </dist:module>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application>
        <activity
                android:name=".GlobeActivity"
                android:parentActivityName="com.mxmariner.main.activity.MainActivity"
                android:theme="@style/AppTheme">
            <intent-filter
                    android:autoVerify="true"
                    android:order="2">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:host="mxmariner.com" />
                <data android:scheme="https" />
                <data android:scheme="http" />
                <data android:path="/tides/globe" />
            </intent-filter>
        </activity>
    </application>
</manifest>

